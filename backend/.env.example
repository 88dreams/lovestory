# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/lovestory

# JWT Authentication
JWT_SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_REGION=us-west-2
AWS_BUCKET_NAME=lovestory-videos

# S3 Upload Settings
MAX_UPLOAD_SIZE=104857600  # 100MB in bytes
ALLOWED_VIDEO_TYPES=["video/mp4", "video/quicktime", "video/x-msvideo"]
MAX_VIDEO_DURATION=300  # 5 minutes in seconds
UPLOAD_URL_EXPIRE=3600  # 1 hour in seconds

# Application Settings
APP_NAME=LoveStory
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# API Settings
API_V1_PREFIX=/api/v1
PROJECT_NAME=LoveStory API
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s 